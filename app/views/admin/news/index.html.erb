<% content_for :page_title, "Управління новинами" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div></div>
  <%= link_to "Додати новину", new_admin_news_path, class: "btn btn-primary" %>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th style="width: 60px;">Зображення</th>
        <th>Заголовок</th>
        <th style="width: 150px;">Дата публікації</th>
        <th style="width: 150px;">Створено</th>
        <th style="width: 200px;">Дії</th>
      </tr>
    </thead>
    <tbody>
      <% @news.each do |news_item| %>
        <tr>
          <td>
            <% if news_item.image.attached? %>
              <%= image_tag news_item.image.variant(resize_to_limit: [60, 60]), class: "img-thumbnail" %>
            <% else %>
              <div class="bg-secondary" style="width: 60px; height: 60px;"></div>
            <% end %>
          </td>
          <td>
            <strong><%= news_item.title %></strong>
            <br>
            <small class="text-muted"><%= truncate(news_item.content, length: 100) %></small>
          </td>
          <td>
            <% if news_item.published_at %>
              <span class="badge bg-success">Опубліковано</span>
              <br><small><%= l(news_item.published_at, format: :short) %></small>
            <% else %>
              <span class="badge bg-warning text-dark">Чернетка</span>
            <% end %>
          </td>
          <td><%= l(news_item.created_at, format: :short) %></td>
          <td>
            <%= link_to "Переглянути", news_path(news_item), class: "btn btn-sm btn-info", target: "_blank" %>
            <%= link_to "Редагувати", edit_admin_news_path(news_item), class: "btn btn-sm btn-primary" %>
            <%= button_to "Видалити", admin_news_path(news_item), method: :delete, data: { confirm: "Ви впевнені?" }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @news, theme: 'twitter-bootstrap-5' %>
