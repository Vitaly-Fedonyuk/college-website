<% content_for :title, "Завантажити документ" %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow">
        <div class="card-header">
          <h2 class="mb-0">Завантажити новий документ</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @document, local: true, html: { multipart: true }) do |form| %>
            <% if @document.errors.any? %>
              <div class="alert alert-danger">
                <h4 class="alert-heading">Помилки при збереженні:</h4>
                <ul class="mb-0">
                  <% @document.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :name, "Назва документу", class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "Введіть назву документу" %>
            </div>

            <div class="mb-3">
              <%= form.label :description, "Опис", class: "form-label" %>
              <%= form.text_area :description, rows: 4, class: "form-control", placeholder: "Введіть опис документу" %>
            </div>

            <div class="mb-3">
              <%= form.label :file, "Файл", class: "form-label" %>
              <%= form.file_field :file, class: "form-control", accept: ".pdf,.doc,.docx,.xls,.xlsx" %>
              <div class="form-text">
                Підтримувані формати: PDF, DOC, DOCX, XLS, XLSX
              </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= link_to "Скасувати", documents_path, class: "btn btn-secondary" %>
              <%= form.submit "Завантажити", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
