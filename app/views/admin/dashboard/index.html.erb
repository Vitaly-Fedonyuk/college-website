<% content_for :page_title, "Панель управління" %>

<div class="row">
  <div class="col-md-4 mb-4">
    <div class="card text-white bg-primary">
      <div class="card-body">
        <h5 class="card-title"><i class="bi bi-newspaper"></i> Новини</h5>
        <p class="card-text display-4"><%= @news_count %></p>
        <%= link_to "Переглянути всі", admin_news_index_path, class: "btn btn-light btn-sm" %>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-12">
    <h3>Останні новини</h3>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Заголовок</th>
            <th>Дата публікації</th>
            <th>Створено</th>
            <th>Дії</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_news.each do |news_item| %>
            <tr>
              <td><%= news_item.title %></td>
              <td><%= news_item.published_at ? l(news_item.published_at, format: :short) : "Не опубліковано" %></td>
              <td><%= l(news_item.created_at, format: :short) %></td>
              <td>
                <%= link_to "Редагувати", edit_admin_news_path(news_item), class: "btn btn-sm btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
